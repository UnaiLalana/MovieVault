---
export interface Props {
  backgroundImage: string;
  name: string;
}

const { backgroundImage, name } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{name}</title>
    <link rel="icon" type="image/png" href={backgroundImage} />
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body>
    <div
      class="background"
      style={`background-image: url('${backgroundImage}');`}
    ></div>

    <div class="button_back">
      <a href="/" style="text-decoration: none; color: #ffffff;">
        â†©
      </a>
    </div>
    <div></div>
    <slot />
  </body>
</html>
<style>
  .button_back {
    position: absolute;
    top: 60px;
    left: 60px;
    font-size: 10vw;
    font-weight: bold;
    transition: transform 0.2s ease;
  }

  .button_back:hover {
    transform: scale(1.3);
  }
</style>

