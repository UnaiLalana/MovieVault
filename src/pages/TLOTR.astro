---
import MovieLayout from '../layouts/MovieLayout.astro';
import MovieCard from '../components/MovieCard.astro';
---
<MovieLayout
backgroundImage="/posters/TLOTR.png"
name='The Lord of the Rings - 2001'>
    <MovieCard
    title="The Lord of the Rings: The Fellowship of the Ring"
    poster="/posters/TLOTR.png"
    genres={['Adventure', 'Fantasy']}
    rating={8.8}
    director="Peter Jackson"
    writers="J.R.R. Tolkien, Fran Walsh, Philippa Boyens"
    stars="Elijah Wood, Ian McKellen, Viggo Mortensen"
    releaseDate="December 19, 2001"
    releaseRegion="USA"
    description="A young hobbit, Frodo Baggins, embarks on a quest to destroy the One Ring and save Middle-earth from the Dark Lord Sauron."
    location="Empire State Building"
    soundtrack="/audio/TLOTR.mp3"
    />
</MovieLayout>