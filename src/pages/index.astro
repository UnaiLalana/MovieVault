---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <header style="padding: 24px 20px; background-color: #1e293b; color: #f1f5f9; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <h1 style="margin: 0; font-size: 2.5rem; font-weight: 700; letter-spacing: 2px;">
      Movie Vault
    </h1>
    <p style="margin-top: 8px; font-size: 1.1rem; max-width: 600px; color: #94a3b8;">
      Your ultimate collection of movie info and soundtracks. Explore and enjoy timeless classics.
    </p>
  </header>

  <div
    style="
      display: flex;
      overflow-x: auto;
      gap: 20px;
      padding: 24px 20px;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      background-color: #f8fafc;
      border-radius: 12px;
      box-shadow: 0 4px 12px rgb(0 0 0 / 0.1);
      margin: 20px;
    "
  >
    <a
      href="/TheGodfather"
      style="flex-shrink: 0; width: 180px; scroll-snap-align: start; text-align: center; text-decoration: none; display: flex;
	  	flex-direction: column;
        cursor: pointer;
        transition: transform 0.3s ease;
      "
      onmouseover="this.style.transform='scale(1.05)'"
      onmouseout="this.style.transform='scale(1)'"
    >
      <img
        src="src/assets/theGodfather.png"
        alt="The Godfather"
        style="
          width: 180px;
          height: 270px;
          object-fit: cover;
          border-radius: 16px;
          box-shadow: 0 6px 16px rgba(0,0,0,0.15);
          margin-bottom: 12px;
          flex-shrink: 0;
        "
      />
    </a>

