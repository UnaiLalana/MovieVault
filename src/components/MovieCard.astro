---
export interface Props {
  title: string;
  poster: string;
  genres: string[];
  rating: number;
  director: string;
  writers: string;
  stars: string;
  releaseDate: string;
  releaseRegion?: string;
}

const {
  title,
  poster,
  genres,
  rating,
  director,
  writers,
  stars,
  releaseDate,
  releaseRegion = 'USA',
} = Astro.props;
---

<div style="display: flex; justify-content: center">
  <div style="display: flex; position: absolute; flex-direction: column; align-items: center; text-align: center; padding-top: 150px">
    <img style="border-radius: 25px;" src={poster} alt={`Poster of ${title}`} />
    <div style="position: absolute; font-size: 40px; color: white; margin-top: 750px; font-weight: 900;">
      ‚≠ê {rating}
    </div>
  </div>

  <div style="background-color: white; color: black; margin: 50px; font-size: 50px; border-radius: 25px; margin-top: 600px; padding-top: 350px">
    <div style="padding: 20px">
        <h2 style="text-align: center;">{title}</h2>

        <div style="display: flex; justify-content: space-evenly ; margin-bottom: 1rem;">
        {genres.map((genre) => (
            <span>
            {genre}
            </span>
        ))}
        </div>

        <p><strong>Director:</strong> {director}</p>
        <p><strong>Writers:</strong> {writers}</p>
        <p><strong>Stars:</strong> {stars}</p>

        <p>
        Release Date: {releaseDate} ({releaseRegion})
        </p>
    </div>
  </div>
</div>
