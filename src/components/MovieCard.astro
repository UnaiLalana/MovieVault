---
export interface Props {
  title: string;
  poster: string;
  genres: string[];
  rating: number;
  director: string;
  writers: string;
  stars: string;
  releaseDate: string;
  releaseRegion?: string;
}

const {
  title,
  poster,
  genres,
  rating,
  director,
  writers,
  stars,
  releaseDate,
  releaseRegion = 'UK',
} = Astro.props;
---

<div>
  <div style="display: flex; flex-direction: column; align-items: center; text-align: center; padding-top: 150px">
    <img style="border-radius: 25px; position: relative" src={poster} alt={`Poster of ${title}`} />
    <div style="position: relative">
      ‚≠ê {rating}
    </div>
  </div>

  <div style="background-color: white; color: black; margin: 50px; font-size: 50px; border-radius: 25px; padding: 10px;">
    <h2 style="text-align: center;">{title}</h2>

    <div style="display: flex; justify-content: center; gap: 0.5rem; margin-bottom: 1rem;">
      {genres.map((genre) => (
        <span>
          {genre}
        </span>
      ))}
    </div>

    <p><strong>Director:</strong> {director}</p>
    <p><strong>Writers:</strong> {writers}</p>
    <p><strong>Stars:</strong> {stars}</p>

    <p>
      Release Date: {releaseDate} ({releaseRegion})
    </p>
  </div>
</div>
